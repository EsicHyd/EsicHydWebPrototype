<!DOCTYPE html>
<html lang="en">

<head>

    <% include ../partials/header/head.ejs %>

    <link rel="stylesheet" href="css/document.css">
    <link rel="stylesheet" href="css/util.css">

    <style>
        .center-text {
            text-align: center;
        }
    </style>

</head>


<body>


    <% include ../partials/header/nav.ejs %>

    <!-- Hero-area -->
    <div class="hero-area section">

        <!-- Backgound Image -->
        <div class="bg-image bg-parallax overlay" style="background-image:url(<%=imagepath%>)"></div>
        <!-- /Backgound Image -->

        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1 text-center">
                    <ul class="hero-area-tree">
                        <li><a href="/">Home</a></li>
                        <% for(var i=0;i<tags.length;i++){                                  %>
                        <%    if((tags.length-i)==1){                                       %>
                        <li>
                            <%= tags[i] %>
                        </li>
                        <%    }else{                                                        %>
                        <li><a href="#">
                                <%= tags[i] %></a></li>
                        <%    }                                                             %>
                        <% }                                                                %>
                    </ul>
                    <h1 class="white-text">
                        <%=tags[tags.length-1]%>
                    </h1>

                </div>
            </div>
        </div>

    </div>
    <!-- /Hero-area -->

    <!-- Blog -->
    <div id="blog" class="section">

        <!-- container -->
        <div class="container">

            <!-- row -->
            <div class="row">


                <!-- main blog -->
                <div id="main" class="col-md-9">
                    <div class="file-manager file-manager-cards">
                        <div class="row">

                        </div>

                    </div>


                    <!-- <div class="row">
                        <div class="col-md-12">
                            <div class="post-pagination">
                                <a href="#" class="pagination-back pull-left">Back</a>
                                <ul class="pages">
                                    <li class="active">1</li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                </ul>
                                <a href="#" class="pagination-next pull-right">Next</a>
                            </div>
                        </div>
                    </div> -->

                </div>

                <% if(contentTag == 'about'){%>
                <% include ../partials/tags-about %>
                <% } else if(contentTag == 'research') {%>
                <% include ../partials/tags-research %>
                <% } else if(contentTag == 'education') {%>
                <% include ../partials/tags-education %>
                <% } else if(contentTag == 'public-forum') {%>
                <% include ../partials/tags-publicforum %>
                <% } else { %>
                <% include ../partials/tag-widget %>
                <% } %>


            </div>
        </div>
    </div>

    <% include ../partials/footer/footer.ejs %>
    <script src="js/docGallery.js"></script>

    <script>
        var lnk = <%- JSON.stringify(link) %>;
        var type = <%- JSON.stringify(type) %>;
        var pathtag = <%- JSON.stringify(pathtag) %>;
        // initTemplate('http://localhost:3000', 'doc', 'Faculty');
        initTemplate(lnk, type, pathtag);
    </script>

</body>

</html>